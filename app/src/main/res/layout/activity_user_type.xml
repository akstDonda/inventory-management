<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/usertypeback"
    tools:context=".common.UserTypeActivity">

    <!--<ImageView
        android:id="@+id/img"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/signup_image"
        android:contentDescription="hello, there!"
        tools:ignore="HardcodedText" /> -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_admin"
        style="?attr/floatingActionButtonLargeStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:maxImageSize="80dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/basic_fab_button_description"
        app:srcCompat="@drawable/baseline_admin_panel_settings_24"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_user"
        style="?attr/floatingActionButtonLargeStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="250dp"
        android:layout_marginTop="16dp"
        app:maxImageSize="80dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/basic_fab_button_description"
        app:srcCompat="@drawable/baseline_supervised_user_circle_24" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floating_action_button_admin"
        android:layout_marginStart="75dp"
        android:textStyle="bold"
        android:text="@string/admin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floating_action_button_user"
        android:layout_marginStart="280dp"
        android:textStyle="bold"
        android:text="User"
        tools:ignore="HardcodedText" />

</RelativeLayout>
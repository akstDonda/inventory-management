<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/usertypeback"
    tools:context=".common.UserTypeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button_admin"
            style="?attr/floatingActionButtonLargeStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:maxImageSize="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/basic_fab_button_description"
            app:srcCompat="@drawable/baseline_admin_panel_settings_24"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button_user"
            style="?attr/floatingActionButtonLargeStyle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom|end"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            app:maxImageSize="80dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/basic_fab_button_description"
            app:srcCompat="@drawable/baseline_group_24" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/floating_action_button_admin"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/admin"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/floating_action_button_user"
            android:text="User"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />

    </RelativeLayout>

</RelativeLayout>
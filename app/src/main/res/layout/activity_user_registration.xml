<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpri2"
    android:backgroundTint="#406F82B5"
    tools:context=".user.UserRegistrationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/round_corner"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/addiconemp" />

        <TextView
            android:id="@+id/haddemp"
            style="@style/formTitle"
            android:text="Employee Registration"
            android:textSize="32dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt_email_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="Email"
            android:textColor="@color/pri2"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/primaryTextInputLayout"
            android:id="@+id/addempemail"
            android:hint="Enter Email"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:ignore="HardcodedText">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/primaryTextInputEditText"
                android:drawableLeft="@drawable/baseline_email_24"
                android:inputType="textEmailAddress"
                android:textColorHint="#546E7A"
                tools:ignore="RtlHardcoded,TextSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/txt_pass_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="Password"
            android:textColor="@color/pri2"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/primaryTextInputLayout"
            android:id="@+id/addemppass"
            android:hint="Enater Password"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            tools:ignore="HardcodedText">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/primaryTextInputEditText"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:inputType="textPassword"
                android:textColorHint="#546E7A"
                tools:ignore="RtlHardcoded,TextSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txt_comapnyname_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:text="Store UID"
            android:textColor="@color/pri2"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/primaryTextInputLayout"
            android:id="@+id/addempcompanyid"
            android:hint="Enter Store UID (Unique)"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            tools:ignore="HardcodedText">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/primaryTextInputEditText"
                android:drawableLeft="@drawable/baseline_business_24"
                android:inputType="text"
                android:textColorHint="#546E7A"
                tools:ignore="RtlHardcoded,TextSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_add_emp"
            style="@style/formBtn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:text="Add Employee"
            android:textColor="@color/white"
            android:textSize="25dp"
            tools:ignore="HardcodedText,SmallSp" />

        <ProgressBar
            android:id="@+id/erProgressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:visibility="invisible" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/back_btnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/baseline_arrow_back_24"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />



</RelativeLayout>
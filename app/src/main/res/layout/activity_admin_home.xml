<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".admin.Home">

    <include layout="@layout/toolbar"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/layout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_dashbord"
            style="@style/cardviewhome">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lightpri2"
                tools:ignore="ExtraText,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/img_cardview_dashbord"
                    style="@style/imgcardview"
                    android:src="@drawable/dashbord"
                    android:contentDescription="TODO"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    style="@style/txtcardview"
                    android:layout_marginBottom="10dp"
                    android:text="Dashboard"
                    tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_adduser"
            style="@style/cardviewhome"
            android:layout_gravity="end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lightpri2"
                tools:ignore="ExtraText,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/img_cardview_adduser"
                    style="@style/imgcardview"
                    android:contentDescription="TODO"
                    android:src="@drawable/baseline_supervised_user_circle_24"
                    tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />

                <TextView
                    style="@style/txtcardview"
                    android:text="Add Employee"
                    tools:ignore="HardcodedText,TextSizeCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_lowstock"
            style="@style/cardviewhome">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lightpri2"
                tools:ignore="ExtraText,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/img_cardview_lowstock"
                    style="@style/imgcardview"
                    android:contentDescription="TODO"
                    android:src="@drawable/lowstock"
                    tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />

                <TextView
                    style="@style/txtcardview"
                    android:layout_marginBottom="10dp"
                    android:text="Low Stock"
                    tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_transaction"
            style="@style/cardviewhome"
            android:layout_gravity="end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lightpri2"
                tools:ignore="ExtraText,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/img_cardview_transaction"
                    style="@style/imgcardview"
                    android:src="@drawable/transaction"
                    android:contentDescription="TODO"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    style="@style/txtcardview"
                    android:text="Transactions"
                    tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout3"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_addproduct"
            style="@style/cardviewhome">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lightpri2"
                tools:ignore="ExtraText,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/img_cardview_addproducts"
                    style="@style/imgcardview"
                    android:contentDescription="TODO"
                    android:src="@drawable/products"
                    tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />

                <TextView
                    style="@style/txtcardview"
                    android:layout_marginBottom="10dp"
                    android:text="Products"
                    tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck,TextContrastCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_setting"
            style="@style/cardviewhome"
            android:layout_gravity="end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/lightpri2"
                tools:ignore="ExtraText,UseCompoundDrawables">

                <ImageView
                    android:id="@+id/img_cardview_setting"
                    style="@style/imgcardview"
                    android:src="@drawable/setting"
                    android:contentDescription="TODO"
                    tools:ignore="ContentDescription,HardcodedText" />

                <TextView
                    style="@style/txtcardview"
                    android:text="Settings"
                    tools:ignore="HardcodedText,TextSizeCheck" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>




    <Button
        android:id="@+id/btn_add_remove"
        style="@style/floatbtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:drawableTop="@drawable/baseline_storefront_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_add"
        style="@style/floatbtnaddremove"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="100dp"
        android:text="Add Transaction"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:ignore="HardcodedText,TextSizeCheck,TextSizeCheck" />

    <Button
        android:id="@+id/btn_remove"
        style="@style/floatbtnaddremove"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="160dp"
        android:text="Add Product"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:ignore="HardcodedText,TextSizeCheck" />

</RelativeLayout>
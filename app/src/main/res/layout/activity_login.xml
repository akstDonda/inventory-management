<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loginback"
    tools:context=".common.LoginActivity">

    <ImageButton
        android:id="@+id/login_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/baseline_arrow_back_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <LinearLayout
        style="@style/formBackground">

        <TextView
            style="@style/formTitle"
            android:id="@+id/h1"
            android:text="Login"

            />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/primaryTextInputLayout"
            android:id="@+id/outlinedTextField11"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/primaryTextInputEditText"
                android:inputType="textEmailAddress"
                tools:ignore="TextSizeCheck"
                android:drawableLeft="@drawable/baseline_email_24"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/primaryTextInputLayout"
            android:id="@+id/outlinedTextField12"
            android:hint="Password">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/primaryTextInputEditText"
                android:inputType="textPassword"
                tools:ignore="TextSizeCheck"
                android:drawableLeft="@drawable/baseline_lock_24"/>

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                style="@style/formBtn"
                android:id="@+id/btn_admin_login"
                android:text="Login" />

            <TextView
                android:id="@+id/openreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_admin_login"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:text="Don't Have Account"
                android:textAlignment="center"
                android:textColor="@color/pri2"
                android:textSize="13dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

            <ProgressBar
                android:id="@+id/lProgressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="140dp"
                android:visibility="gone"
                android:layout_marginTop="30dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/usertypeback"
    tools:context=".common.LoginActivity">

    <ImageButton
        android:id="@+id/back_btnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/baseline_arrow_back_24"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <LinearLayout
        style="@style/formBackground">
        <TextView
            style="@style/formTitle"
            android:id="@+id/uadd"
            android:text="Add Employee"
            tools:ignore="HardcodedText" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/primaryTextInputLayout"
            android:id="@+id/adduseremail"
            android:hint="Email"
            tools:ignore="HardcodedText">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/primaryTextInputEditText"
                android:drawableLeft="@drawable/baseline_email_24"
                android:inputType="textEmailAddress"
                android:textColorHint="#546E7A"
                tools:ignore="RtlHardcoded,TextSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/primaryTextInputLayout"
            android:id="@+id/adduserpass"
            android:hint="Password"
            tools:ignore="HardcodedText">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/primaryTextInputEditText"
                android:drawableStart="@drawable/baseline_lock_24"
                android:inputType="textPassword"
                tools:ignore="TextSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/adduser"
                style="@style/formBtn"
                android:text="Login"
                tools:ignore="HardcodedText,DuplicateSpeakableTextCheck,VisualLintButtonSize" />


            <ProgressBar
                android:id="@+id/lProgressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="140dp"
                android:visibility="gone"
                android:layout_marginTop="30dp"/>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
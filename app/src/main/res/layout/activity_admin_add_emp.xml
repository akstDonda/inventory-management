<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".common.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back_btnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/baseline_arrow_back_24"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/addiconemp" />

        <TextView
            style="@style/formTitle"
            android:id="@+id/haddemp"
            android:text="Add New Employee"
            tools:ignore="HardcodedText"
            android:textSize="34dp"/>

        <TextView
            android:id="@+id/txt_email_admin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/pri2"
            android:textSize="17sp"
            android:paddingLeft="10dp"
            tools:ignore="HardcodedText"/>

        <EditText
            android:id="@+id/adduseremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/lightpri2"
            android:hint="Enter Email"
            android:minHeight="60dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:textColor="#212121"
            android:textColorHint="#212121"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="textEmailAddress"
            tools:ignore="HardcodedText,SmallSp"
            android:importantForAutofill="no" />


        <TextView
            android:id="@+id/txt_pass_admin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/pri2"
            android:textSize="17sp"
            android:paddingLeft="10dp"
            tools:ignore="HardcodedText"/>

        <EditText
            android:id="@+id/adduserpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/lightpri2"
            android:hint="Enter password"
            android:minHeight="60dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:textColor="#212121"
            android:textColorHint="#212121"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="textEmailAddress"
            tools:ignore="HardcodedText,SmallSp"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/txt_comapnyname_admin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comapany ID"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/pri2"
            android:textSize="17sp"
            android:paddingLeft="10dp"
            tools:ignore="HardcodedText"/>

        <EditText
            android:id="@+id/addusercn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/lightpri2"
            android:hint="Enter Comapny ID (Unique)"
            android:minHeight="60dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/baseline_business_24"
            android:drawablePadding="14dp"
            android:paddingLeft="15dp"
            android:textColor="#212121"
            android:textColorHint="#212121"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="textEmailAddress"
            tools:ignore="HardcodedText,SmallSp"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btn_add_user"
            style="@style/formBtn"
            android:text="Add Employee"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="HardcodedText,SmallSp"
            />

        <ProgressBar
            android:id="@+id/lProgressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            />









    </LinearLayout>

</RelativeLayout>